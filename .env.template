# ===== DATABASE CONFIGURATION =====
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_URL=jdbc:mysql://localhost:3306/OAuthTemplate_DEV?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC

# ===== GOOGLE OAUTH2 =====
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===== SPOTIFY OAUTH2 =====
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ===== APPLE OAUTH2 =====
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# ===== SOUNDCLOUD OAUTH2 =====
SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id
SOUNDCLOUD_CLIENT_SECRET=your_soundcloud_client_secret

# ===== JWT SECRET (FOR TOKEN GENERATION) =====
# IMPORTANT: Generate a strong random secret of at least 32 characters for production
JWT_SECRET=your_jwt_secret_key_min_32_chars_for_hs256

# ===== SERVER CONFIGURATION =====
SERVER_PORT=8080

# ===== EMAIL CONFIGURATION =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM_ADDRESS=no-reply@yourdomain.com
EMAIL_FROM_NAME=OAuth Template App
EMAIL_DEBUG=false

# ===== APPLICATION CONFIGURATION =====
APP_BASE_URL=http://localhost:3000
SUPPORT_EMAIL=support@yourdomain.com
APP_NAME=OAuth Template

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=http://localhost:3000
LOGIN_SUCCESS_REDIRECT_URL=/home
LOGIN_FAILURE_REDIRECT_URL=/login?error=true

# ===== ADMIN CONFIGURATION =====
ADMIN_EMAILS=admin@yourdomain.com,your@email.com

# ===== FILE UPLOADS =====
UPLOAD_DIR=uploads/profiles

# ===== SPRING PROFILES =====
# The profile is set when running the application, not from this file
# SPRING_PROFILES_ACTIVE=dev